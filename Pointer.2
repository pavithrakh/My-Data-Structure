//Updating an element using pointers
#include <stdio.h>

int main() {
    int arr[] = {10, 20, 30, 40, 50};
    int *ptr;

    ptr = &arr[1]; 

    printf("Original value of arr[1]: %d\n", *ptr);

    *ptr = 25; 

    printf("Updated value of arr[1]: %d\n", arr[1]);

    *(ptr + 2) = 45; 
    printf("Updated value of arr[3]: %d\n", arr[3]);

    return 0;
}

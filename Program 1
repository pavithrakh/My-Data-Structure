#include <stdio.h>
#include <stdlib.h>

int main() {
    int *arr, n;
    int sum = 0, max;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    arr = (int *)malloc(n * sizeof(int));

    if (arr == NULL) {
        printf("Memory not allocated!\n");
        return 1;
    }

    printf("Enter %d integers:\n", n);
    for (int i = 0; i < n; i++)
        scanf("%d", arr + i);  

    max = *arr;
    for (int i = 0; i < n; i++) {
        sum += *(arr + i);
        if (*(arr + i) > max)
            max = *(arr + i);
    }

    printf("Sum = %d\n", sum);
    printf("Maximum = %d\n", max);

    free(arr); 
    return 0;
}

#include <stdio.h>
#include <stdlib.h>

typedef struct Node {
    int data;
    struct Node *next;
} Node;

Node* create_node(int value) {
    Node* new_node = malloc(sizeof(Node));
    if (!new_node) {
        fprintf(stderr, "Memory allocation failed\n");
        exit(EXIT_FAILURE);
    }
    new_node->data = value;
    new_node->next = NULL;
    return new_node;
}

void append(Node **head, int value) {
    Node *new_node = create_node(value);
    if (*head == NULL) {
        *head = new_node;
        return;
    }
    Node *temp = *head;
    while (temp->next)
        temp = temp->next;
    temp->next = new_node;
}

void print_list(Node *head) {
    while (head) {
        printf("%d -> ", head->data);
        head = head->next;
    }
    printf("NULL\n");
}

void delete_kth_from_end(Node **head, int k) {
    Node *fast = *head, *slow = *head, *prev = NULL;

    for (int i = 0; i < k; i++) {
        if (!fast) {
            printf("List shorter than %d nodes.\n", k);
            return;
        }
        fast = fast->next;
    }

    if (!fast) {
        Node *temp = *head;
        *head = (*head)->next;
        free(temp);
        return;
    }

    while (fast) {
        fast = fast->next;
        prev = slow;
        slow = slow->next;
    }

    prev->next = slow->next;
    free(slow);
}

void free_list(Node *head) {
    Node *temp;
    while (head) {
        temp = head;
        head = head->next;
        free(temp);
    }
}

int main(void) {
    Node *head = NULL;
    int n, k, value;

    printf("Enter number of nodes: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        printf("Enter value for node %d: ", i + 1);
        scanf("%d", &value);
        append(&head, value);
    }

    printf("Original list:\n");
    print_list(head);

    printf("Enter k (k-th node from end to delete): ");
    scanf("%d", &k);

    delete_kth_from_end(&head, k);

    printf("List after deleting %d-th node from end:\n", k);
    print_list(head);

    free_list(head);
    return 0;
}
